<?php
#!/usr/bin/env php

// Este script ahora actúa como el 'runner' de la clase Cli.
// Toda la lógica de los comandos se ha movido a la clase para una mejor organización.

require __DIR__ . '/vendor/autoload.php';

use App\Core\Cli;

// Capturar el comando y los argumentos de la línea de comandos
$arguments = $argv;
array_shift($arguments); // Elimina el nombre del script

// Instanciar la clase Cli y ejecutar el comando
$cli = new Cli();
$cli->run($arguments);

// Fin del script de ejecución
